        </div>
        
        <div class="menu-item" onclick="addToOrder('Чай', 30)">
            <img src="https://images.unsplash.com/photo-1558160074-4d7d8bdf4256?ixlib=rb-1.2.1&auto=format&fit=crop&w=200&q=80" alt="Чай">
            <h3>Чай</h3>
            <p>30 грн</p>
        </div>
    </div>
    
    <div class="order-section">
        <input type="text" class="customer-name" id="customerName" placeholder="Ваше ім'я (наприклад, Макс)" required>
        <h2>Ваше замовлення</h2>
        <ul class="order-list" id="orderList"></ul>
        <div class="total" id="totalPrice">Всього: 0 грн</div>
        <button class="order-btn" id="orderBtn" disabled onclick="sendOrder()">Замовити через Viber</button>
        <div class="status" id="statusMessage"></div>
    </div>
    
    <script>
        let order = [];
        const phoneNumber = "380661443280";
        
        function addToOrder(name, price) {
            const existingItem = order.find(item => item.name === name);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                order.push({
                    name: name,
                    price: price,
                    quantity: 1
                });
            }
            
            updateOrderDisplay();
            checkOrderBtn();
        }
        
        function updateOrderDisplay() {
            const orderList = document.getElementById('orderList');
            const totalPriceElement = document.getElementById('totalPrice');
            
            orderList.innerHTML = '';
            let total = 0;
            
            order.forEach(item => {
                const li = document.createElement('li');
                li.innerHTML = `<span>${item.name} x${item.quantity}</span><span>${item.price * item.quantity} грн</span>`;
                orderList.appendChild(li);
                total += item.price * item.quantity;
            });
            
            totalPriceElement.textContent = `Всього: ${total} грн`;
        }
        
        function checkOrderBtn() {
            document.getElementById('orderBtn').disabled = 
                order.length === 0 || document.getElementById('customerName').value.trim() === '';
        }
        
        function sendOrder() {
            if (order.length === 0) return;
            
            const customerName = document.getElementById('customerName').value.trim() || "Клієнт";
            let orderText = `${customerName} замовив(ла):\n`;
            
            order.forEach(item => {
                orderText += `\n${item.name} - ${item.price * item.quantity} грн`;
            });
            
            const total = order.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            orderText += `\n\nЗагальна сума: ${total} грн`;
            
            const encodedText = encodeURIComponent(orderText);
            window.open(`viber://chat?number=%2B${phoneNumber}&text=${encodedText}`, '_blank');
            
            document.getElementById('statusMessage').textContent = "Відкрито Viber для відправки замовлення!";
            
            setTimeout(() => {
                order = [];
                document.getElementById('customerName').value = '';
                updateOrderDisplay();
                document.getElementById('statusMessage').textContent = "";
            }, 3000);
        }
        
        document.getElementById('customerName').addEventListener('input', checkOrderBtn);
    </script>
</body>
